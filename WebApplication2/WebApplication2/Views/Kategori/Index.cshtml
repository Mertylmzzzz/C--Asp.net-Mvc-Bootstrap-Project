@using WebApplication2.Models.Entity;
@model List<Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <p>
        <strong>Aranacak Müşteri Adı:</strong>  @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.Kategoriid</th>
                <td>@ktgr.Kategoriad</td>
                <td><a href="/Kategori/SIL/@ktgr.Kategoriid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/Kategorigetir/@ktgr.Kategoriid" class="btn btn-success">GUNCELLE</a></td>

            </tr>
        }
    </tbody>

</table>
<a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>