@using WebApplication2.Models.Entity;
@model PagedList.IPagedList<Urunler>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Ürün Kategorisi</th>
            <th>Ürün Fiyatı</th>
            <th>Ürün Stoğu</th>
            <th>Ürün Markası</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.Urunid</th>
                <td>@urn.Urunad</td>
                <td>@urn.Kategoriler.Kategoriad</td>
                <td>@urn.Fiyat</td>
                <td>@urn.stok</td>
                <td>@urn.marka</td>
                <td><a href="/Urunler/SIL/@urn.Urunid" class="btn btn-danger">SİL</a></td>
                <td><a href="/Urunler/UrunGetir/@urn.Urunid" class="btn btn-success">GUNCELLE</a></td>
            </tr>
        }



    </tbody>


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }));
<a href="/Urunler/YeniUrunler/" class="btn btn-primary">Yeni Ürün Ekle</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script>
    $('#tbl1').DataTable();
    </script>