@model WebApplication2.Models.Entity.Musteriler
@{
    ViewBag.Title = "YeniMusteriler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.Musteriad, new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.Musteriad,"", new {@style="color:green"})
        

    </div>
    <div style="margin-top:10px">
        <label>Müşteri Soyadı </label>
        <input type="text" class="form-control" name="Musterisoyad" />


    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Yeni Müşteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Yeni Müşteri Eklendi');
        });
    </script>
</form>
